// universal
table, caption, tbody, tfoot, thead, tr, th, td {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}


ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

li {
  margin: 0;
  padding: 0;
}

html {
  height: 100%;
  background-color: $background-color;
}

body {
  background-color: $background-color;
}

.btn {
  border-radius: 0;
}

.small-caps {
  font-variant: small-caps;
}

// clearfix solution
.group:after {
  content: "";
  display: table;
  clear: both;
}
